import javax.swing.JOptionPane;
public class GUI2 {
    GUI2 (){

    }

    public static void main(String[] args) {
        String name = JOptionPane.showInputDialog("Enter your name here");
        JOptionPane.showMessageDialog(null,"Hello"+name);

        int age = Integer.parseInt(JOptionPane.showInputDialog("Enter your age"));
        JOptionPane.showMessageDialog(null,"You are"+age+"Years old");

        double amount = Double.parseDouble(JOptionPane.showInputDialog("Enter your salary"));
        JOptionPane.showMessageDialog(null,"Your monthly amount is"+amount);
    }
}
